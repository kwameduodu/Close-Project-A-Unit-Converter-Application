package mainAdvance;

import java.util.Scanner;



public class ConverterAdvance {

	public static void main(String[] args) {
		Scanner user_menu = new Scanner(System.in); 
		
		
  // Display for user to choose
		System.out.println("Please select an option: " +
				"\n1. Cups to Teaspoons" +
				"\n2. Miles to Kilometers" +
				"\n3. US Gallons to Imperial Gallons" +
				"\n4. Quit");

		         //user input choice	
				int firstChoice = user_menu.nextInt();
				
				
				
		//User option to quit
			int lastMenu = 4;
			
		//if user input does not quit, keep displaying menu	
		while (firstChoice != lastMenu) {
			
				//what to display base on user input
				switch (firstChoice) {
				case 1: 
					firstChoice = volumeComverter(user_menu);
					break;
					
				case 2:
					firstChoice = distanceComverter(user_menu);
					break;

				case 3:
					firstChoice = temperatureComverter(user_menu);
					break;

			default:
				System.out.println("The option does not exist");
				
				 // Display option for user
				System.out.println("Please select an option: " +
						"\n1. Cups to Teaspoons" +
						"\n2. Miles to Kilometers" +
						"\n3. US Gallons to Imperial Gallons" +
						"\n4. Quit");
				//ask for user input again
				 firstChoice = user_menu.nextInt();
				
}
	
			
	}
		//if user input is 4 end Converter
		if(firstChoice == lastMenu) {
			System.out.println("Thank you for playing");
		}
				user_menu.close(); //option scanner closed
				
		
		}

	public static int temperatureComverter(Scanner user_menu) {
		int user_option, user_finalChoice;
		
		System.out.println("How many Gallons? ");
		user_finalChoice = user_menu.nextInt();
		 System.out.println("The conversion from US Gallons to Imperial is "+user_finalChoice /1.201 + " Imperial Gallons");
//ask for user input again
 user_option = user_menu.nextInt();
		return user_option;
	}

	public static int distanceComverter(Scanner user_menu) {
		int user_option, user_finalChoice;
		
		System.out.println("How many miles? ");
		user_finalChoice = user_menu.nextInt(); 
		 System.out.println("The conversion from miles to kilometers is "+user_finalChoice *1.609 + " kilometers");
//ask for user input again
 user_option = user_menu.nextInt();
		return user_option;
	}

	public static int volumeComverter(Scanner user_menu) {
		int user_option, user_finalChoice;
		System.out.println("How many cups? ");
		//ask for user input again
		user_finalChoice = user_menu.nextInt();
		 System.out.println("The conversion from cup to teaspoon is "+user_finalChoice *48 + " Teaspoons");
		 user_option = user_menu.nextInt();
		return user_option;
	}
	

}// the end
